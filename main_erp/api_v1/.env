# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_URL=https://rootsofnortheast.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_username
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random-at-least-256-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Security Configuration
PASSWORD_HASH_COST=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://rootsofnortheast.com,https://www.bodolandtransport.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With